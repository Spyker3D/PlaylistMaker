<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="8dp"
        android:layout_marginRight="8dp"
        tools:src="@drawable/placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/track_image"
        android:layout_centerVertical="true">

        <TextView
            style="@style/TrackViewTrackNameText"
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="250sp"
            android:ellipsize="end"
            tools:text="Some song" />

        <TextView
            style="@style/TrackViewOtherTrackDetailsText"
            android:id="@+id/band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_name"
            android:maxLines="1"
            android:maxWidth="200sp"
            android:ellipsize="end"
            tools:text="The Beatles"/>

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_name"
            android:layout_toEndOf="@+id/band_name"
            android:src="@drawable/dot_icon"/>

        <TextView
            style="@style/TrackViewOtherTrackDetailsText"
            android:id="@+id/track_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_name"
            android:layout_toEndOf="@+id/dot"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="3:47"/>

        <ImageView
            style="@style/ActivitySettingsIcons"
            android:id="@+id/forward_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_forward"/>

    </RelativeLayout>

</RelativeLayout>