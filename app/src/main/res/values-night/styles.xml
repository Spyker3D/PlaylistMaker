<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/blue_light</item>
    </style>

    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/dark_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ActivitySettingsIcons">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textColorHint">@color/dark_black</item>
        <item name="android:drawableLeft">@drawable/hand_lens_edittext</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TrackViewOtherTrackDetailsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>