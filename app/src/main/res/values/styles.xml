<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarMainMenuTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/dark_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="updateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/update_button_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="button_new_playlist" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/update_button_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="button_create_new_playlist" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ActivitySettingsTextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_and_tracklist_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackViewTrackNameText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_and_tracklist_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AlbumDetailsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_and_tracklist_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AudioplayerBottomSheetHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholders_texts_and_headers</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AudioplayerNumberOfTracksText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audioplayer_number_of_tracks_text</item>
        <item name="android:textColor">@color/image_tint</item>
    </style>

    <style name="TrackViewOtherTrackDetailsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableLeft">@drawable/hand_lens_edittext</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="EditTextNewPlaylist" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textVisiblePassword</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
    </style>

    <style name="AudioplayerTrackDetailsName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/light_gray_for_text</item>
    </style>

    <style name="AudioplayerTrackDetailsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>

    <style name="AudioplayerMediumText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AudioplayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MediaLibraryTextPlaceholder">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/placeholders_texts_and_headers</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MediaLibraryTabLayoutTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medialibrary_tab_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationViewTextItems">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextBoxOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="PlaylistNameHeader">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistDetails">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistNameBottomSheet">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistDetailsBottomSheet">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>