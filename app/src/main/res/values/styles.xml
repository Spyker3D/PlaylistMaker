<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MainMenuToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Theme.MaterialComponents.DayNight.NoActionBar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>