<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarOtherMenuTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarMainMenuTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainmenu_icons_padding</item>
        <item name="iconTint">@color/dark_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ActivitySettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_12dp</item>
    </style>

    <style name="ActivitySettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settingslist_text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ActivitySettingsIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/gray</item>
    </style>
    
    <style name="SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableLeft">@drawable/hand_lens_edittext</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="hand_lens">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/gray</item>

    </style>
resources
</resources>